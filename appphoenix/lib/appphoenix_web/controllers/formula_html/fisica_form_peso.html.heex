<.simple_form :let={f} for={@changeset} action={@action}>
  <.error :if={@changeset.action}>ERRO: erro ao calcular peso</.error>
  <.input field={f[:massa]}   type="number" label="Massa" step="any" />
  <.input field={f[:espaco]}  type="text"   label="Espaco" />
  <:actions>
    <.button class="btn">Calcular peso</.button>
  </:actions>
</.simple_form>